<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <android.support.v7.widget.SwitchCompat
        android:id="@+id/setting_notification_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_10"
        android:checked="false"
        android:paddingBottom="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_20"
        android:paddingTop="@dimen/margin_10"
        android:text="Notification"
        android:textSize="15sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/setting_notification_switch" />

    <TextView
        android:id="@+id/txt_change_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:paddingBottom="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_20"
        android:paddingTop="@dimen/margin_10"
        android:visibility="gone"
        android:text="Change Store"
        android:textColor="@color/black"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/setting_notification_switch"
        android:background="@color/lightgray"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/base_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginTop="@dimen/margin_5"
        android:paddingLeft="@dimen/margin_20"
        android:text="Base Currency"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:textSize="15sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/base_currency"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:background="@color/white" />
</RelativeLayout>