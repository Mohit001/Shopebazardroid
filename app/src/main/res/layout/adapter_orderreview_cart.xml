<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/margin_5"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@color/bg_order_details"
        android:padding="@dimen/margin_5">

        <ImageView
            android:id="@+id/cart_product_image"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_marginLeft="@dimen/margin_5"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:id="@+id/cart_product_detail_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_toRightOf="@id/cart_product_image">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/cart_product_name_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="@color/order_review_gray" />

            <LinearLayout
                android:id="@+id/cart_product_price_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cart_product_name_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/cart_product_latest_price_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4000"
                    android:textColor="@color/order_review_gray" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/cart_product_old_price_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="5000"
                    android:textColor="@color/bg_grey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cart_custom_option_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cart_product_price_ll"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="vertical"

                />

            <LinearLayout
                android:id="@+id/cart_product_size_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cart_custom_option_ll"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/cart_product_size_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size : "
                    android:textColor="@color/order_review_gray"
                    android:visibility="gone" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/cart_product_customoption_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XL"
                    android:textColor="@color/order_review_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cart_product_quentity_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cart_product_size_ll"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/cart_product_quentity_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Quantity : "
                    android:textColor="@color/order_review_gray" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/cart_product_quentity_content"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="1"
                    android:textColor="@color/order_review_gray" />


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/cart_product_shipping_charge_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cart_product_quentity_ll"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/cart_product_shipping_charge_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Shipping Charge : "
                    android:textColor="@color/order_review_gray" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/cart_product_shipping_charge_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toLeftOf="@id/cart_product_delete_image"
                    android:layout_toRightOf="@id/cart_product_shipping_charge_lbl"
                    android:text="4000"
                    android:textColor="@color/order_review_gray" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cart_product_subtotal_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cart_product_shipping_charge_ll"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/cart_product_subtotal_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Subtotal : "
                    android:textColor="@color/order_review_gray" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/cart_product_subttotal_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toLeftOf="@id/cart_product_delete_image"
                    android:layout_toRightOf="@id/cart_product_subtotal_lbl"
                    android:text="4000"
                    android:textColor="@color/order_review_gray" />

            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>