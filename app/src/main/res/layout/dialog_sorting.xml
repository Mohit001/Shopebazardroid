<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/margin_15">

    <TextView
        android:id="@+id/sort_dialog_title_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Sorting Products"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/sort_dialog_descending_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_centerHorizontal="true"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:layout_below="@id/sort_dialog_title_lbl"
        android:paddingBottom="@dimen/margin_5"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="@dimen/margin_5"
        android:background="@color/colorPrimary"
        android:text="Max - Min By Price"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/sort_dialog_ascending_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sort_dialog_descending_lbl"
        android:layout_centerHorizontal="true"
        android:drawablePadding="8dp"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_5"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="@dimen/margin_5"
        android:text="Min - Max By Price"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>