<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/proceed_continue_btn"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/sp_card_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            android:padding="@dimen/margin_5" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/card_number_inputlayout_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_inputlayout_txt"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:padding="@dimen/margin_5"
            >

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:hint="Card number"
                android:inputType="phone"
                android:maxLength="16"
                android:nextFocusDown="@+id/expMonth"
                android:nextFocusForward="@+id/expMonth"
                android:nextFocusRight="@+id/expMonth"
                android:textSize="18sp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/person_name_inputlayout_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_inputlayout_txt"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"

            android:padding="@dimen/margin_5" >

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_person_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:hint="Name"
                android:maxLength="19"
                android:singleLine="true"
                android:textSize="18sp"/>

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal"
            android:weightSum="2">

            <Spinner
                android:id="@+id/sp_expMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/month_array"
                android:nextFocusForward="@+id/expYear"
                android:padding="@dimen/margin_5" />

            <Spinner
                android:id="@+id/sp_expYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_weight="1"
                android:entries="@array/year_array"
                android:nextFocusForward="@+id/cvc"
                android:padding="@dimen/margin_5" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/csv_inputlayout_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:padding="@dimen/margin_5">
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edt_csv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="cvv"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:nextFocusForward="@+id/save"/>
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/proceed_continue_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:padding="@dimen/margin_10"
        android:background="@color/colorPrimary"
        android:text="continue"
        android:textAllCaps="true"
        android:textColor="@color/white" />

</RelativeLayout>