<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@color/bg_grey_light"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_5"
        android:paddingTop="@dimen/margin_5">

        <RelativeLayout
            android:id="@+id/address_title_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/address_action_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/address_edit_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/edit_icon" />

                <ImageView
                    android:id="@+id/address_delete_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/btn_delete" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatRadioButton
                android:id="@+id/address_select_radiobutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/address_title_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/address_action_ll"
                android:layout_toRightOf="@id/address_select_radiobutton"
                android:text="Test firstname"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_hex_c6"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/address_home_office_number_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_10"
            android:text="A/123" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/address_street_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:text="street" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/address_landmark_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:text="landmark"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/address_city_state_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/address_city_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:text="city" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/address_coma_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:text="," />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/address_state_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="@dimen/margin_5"
                android:text="region" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/address_country_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:text="Country"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/address_pincode_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:text="postcode" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/address_email_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:text="email"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/address_mobile_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:text="mobile" />


    </LinearLayout>
</RelativeLayout>