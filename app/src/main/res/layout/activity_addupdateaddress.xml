<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_20"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:paddingTop="@dimen/margin_10">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/address_alias_inputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/address_alias_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:padding="@dimen/margin_5"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/address_homeoffice_no_inputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:hint="Home / Office No">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/address_homeoffice_no_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_5"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/address_street_inputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:hint="Street">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/address_street_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_5"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/address_landmark_inputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:hint="landmark"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/address_landmark_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/address_country_inputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:hint="Country">

            <!--<android.support.v7.widget.AppCompatEditText
                android:id="@+id/address_country_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:singleLine="true" />-->

            <android.support.v7.widget.AppCompatAutoCompleteTextView
                android:id="@+id/address_country_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:lines="1"
                android:padding="@dimen/margin_5"
                android:singleLine="true"
                android:text="" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/address_state_inputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:hint="Region">

            <!-- <android.support.v7.widget.AppCompatEditText
                 android:id="@+id/address_state_txt"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:lines="1"
                 android:singleLine="true" />-->

            <android.support.v7.widget.AppCompatAutoCompleteTextView
                android:id="@+id/address_state_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:lines="1"
                android:padding="@dimen/margin_5"
                android:singleLine="true"
                android:text="" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/address_city_inputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:hint="City">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/address_city_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:padding="@dimen/margin_5"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/address_pincode_inputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:hint="PostCode">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/address_pincode_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:lines="1"
                android:padding="@dimen/margin_5"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/address_email_inputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:hint="email"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/address_email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:padding="@dimen/margin_5"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/address_mobile_inputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:hint="Mobile">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/address_mobile_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:lines="1"
                android:padding="@dimen/margin_5"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/address_billing_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:checked="false"
            android:padding="@dimen/margin_5"
            android:text=" Set as default billing address"
            android:textColor="@color/bg_grey"
            android:textSize="12sp" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/address_shipping_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="@dimen/margin_5"
            android:text=" Set as default Shipping address"
            android:textColor="@color/bg_grey"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_weight="1"
                android:text="@string/lbl_cancel"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="gone" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lbl_submit"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>